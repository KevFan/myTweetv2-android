<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference
        android:key="firstName"
        android:summary="@string/firstNameSummary"
        android:title="@string/firstName"/>

    <EditTextPreference
        android:key="lastName"
        android:summary="@string/lastNameSummary"
        android:title="@string/lastName"/>

    <EditTextPreference
        android:key="password"
        android:summary="@string/password_summary"
        android:title="@string/password"
        android:inputType="textPassword"/>

    <EditTextPreference
        android:key="email"
        android:summary="@string/emailSummary"
        android:title="@string/email"
        android:inputType="textEmailAddress"/>

</PreferenceScreen>